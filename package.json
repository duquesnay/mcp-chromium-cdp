{
  "name": "mcp-chromium-cdp",
  "version": "1.0.0",
  "description": "Model Context Protocol (MCP) server for controlling Chromium/Chrome via Chrome DevTools Protocol. Cross-platform with automatic reconnection. Enables AI assistants like Claude to automate browsers.",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-chromium-cdp": "build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "start": "node build/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "chromium",
    "chrome",
    "browser-automation",
    "cdp",
    "chrome-devtools-protocol",
    "claude",
    "ai",
    "automation",
    "reconnection",
    "cross-platform"
  ],
  "author": "duquesnay",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/duquesnay/mcp-chromium-cdp.git"
  },
  "bugs": {
    "url": "https://github.com/duquesnay/mcp-chromium-cdp/issues"
  },
  "homepage": "https://github.com/duquesnay/mcp-chromium-cdp#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chrome-launcher": "^1.1.2",
    "chrome-remote-interface": "^0.33.2",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/chrome-remote-interface": "^0.31.14",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.8",
    "typescript": "^5.7.2",
    "vitest": "^4.0.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
